unit Unit2;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Grids;

type
  TForm2 = class(TForm)
    lbl1: TLabel;
    lbl2: TLabel;
    lbl3: TLabel;
    lbl4: TLabel;
    strngrd1: TStringGrid;
    lbl5: TLabel;
    strngrd2: TStringGrid;
    lbl7: TLabel;
    btn1: TButton;
    procedure FormShow(Sender: TObject);
    procedure btn1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

const n:integer = 6;
var
  Form2: TForm2;
  masx: array[1..7] of Real = (0.10,0.20,0.29,0.40,0.49,0.55,0.526);
  masy: array[1..7] of Real = (1.66448,1.66071 , 1.65734 , 1.65322,1.64987, 1.64764 ,0);

implementation

{$R *.dfm}

procedure draw_table;
var
  i,j: byte; D,P:real; L:real;
begin
  // Заполнение разностей в таблице
  P:=1;
  for i:=1 to n do
    for j:=1 to n do
      if i<>j then
      begin
        form2.strngrd2.Cells[j-1,i-1]:=FloatToStr(masx[i]-masx[j]);
      end
      else
      begin
        form2.strngrd2.Cells[j-1,i-1]:=FloatToStr(masx[7]-masx[i]);
        P:=P*(masx[7]-masx[i]);
      end;
  // Заполнение столбца D
  L:=0;
  for i:=1 to n do
    begin
    D:=1;
    for j:=1 to n do
      D:=D*strtofloat(Form2.strngrd2.Cells[j-1,i-1]);
    Form2.strngrd2.Cells[6,i-1]:=FormatFloat('0.00000000',D);
    Form2.strngrd2.Cells[7,i-1]:=FormatFloat('0.00',masy[i]/D);
    L:=L+masy[i]/D;
    end;
    Form2.strngrd2.Cells[0,6]:='Сумма = ';
    form2.strngrd2.Cells[7,6]:=formatfloat('0.00',L);
    form2.lbl7.caption:='Произведение диагональных элементов =  '+formatfloat('0.00000000000000',P);
    Form2.lbl1.Caption:='Ответ:  Y  =  '+FormatFloat('0.000000',L*P)
end;

procedure TForm2.FormShow(Sender: TObject);
var
    L:real;
    i,j: Byte;
begin
  // Заполнение исходной таблицы
  strngrd1.Cells[0,0]:='X';
  strngrd1.Cells[1,0]:='Y';
  for i:=1 to n do begin
  strngrd1.Cells[0,i]:=floattostr(masx[i]);
  strngrd1.Cells[1,i]:=floattostr(masy[i]);
  end;
  //Заполнение расчетной таблицы
  draw_table;
  Form2.lbl3.Caption:='Искомое:  X  =  '+floattostr(masx[7]);
end;

procedure TForm2.btn1Click(Sender: TObject);
begin
  Form2.Close;
end;

end.
